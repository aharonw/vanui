li.link.notifications
  position: relative
  z-index: 10

  &.active
    background-color: white
    color: #26598c

    &:hover
      background-color: white !important
      color: #26598c

    #notifications
      display: block

#notifications
  top: 40px
  left: 0px
  width: 375px
  position: absolute
  z-index: 20
  background-color: #fff
  border: 1px solid #ddd
  -webkit-box-shadow: 1px 1px 0px rgba(0,0,0,.1)
  display: none

  li
    width: 100%
    border-bottom: 1px solid #ddd
    color: #666
    padding: 15px 20px


    .top
      float: left
      width: 100%

      .icon
        width: 15px
        height: 15px
        float: left
        background-color: #CCC
        margin-right: 10px
        margin-top: 2px
      .title
        font-weight: 600
        float: left
        text-align: left
        color: #26598c
      .dismiss
        float: right
        font-size: 11px
        color: #26598c
        opacity: .7

    .bottom
      float: left
      width: 100%
      text-align: left
      margin-top: 2px

      .time-ago
        float: right
        color: #999
        font-size: 11px

      .actor
        float: left
        color: #999
        margin-right: 5px
        margin-left: 25px



    &.view-all
      text-align: center
      color: #26598c
      background-color: #f7f7f7