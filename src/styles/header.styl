#ngpvan-tabs-bar, .masterbanner
  display: none


/* DISPLAY GLOBAL HEADER */

#new-header
  position: fixed
  top: 0
  width: 100%
  z-index: 100

.wrapper
  width: 90%
  margin: 0 auto
  max-width: 1250px

ul#logos
  width: 400px
  float: left

#global-header
  background-color: #00aff3
  padding: 0px
  border-bottom: 1px solid rgba(255,255,255,0.5)
  float: left
  width: 100%

  ul.right
    float: right
    color: white
    font-size: 14px

    li
      float: left
      cursor: pointer
      opacity: 1

      &>*
        float: left

      &:hover
        opacity: 1

      &.profile
        padding: 8px
        .name
          padding-top: 3px

        .picture
          margin-right: 10px

          img
            height: 25px

        .nub
          margin-top: 10px
          margin-left: 10px

          img
            width: 10px

      &:hover
        background-color: rgba(255,255,255,.2)

    .help
      margin-right: 25px
      padding: 11px

    .link
      padding: 11px 10px


  ul.left
    float: left
    padding: 7px 0px
    li
      float: left

      &.committee 
        
        img
          height: 23px
          margin-top: 1px

      &.subcommittee
        margin-left: 12px
        color: #fff
        font-size: 14px
        padding: 3px 6px 4px 6px
        border: 1px solid #fff
        opacity: .7
        cursor: pointer

        &:hover
          opacity: 1

        .text
          float: left

        .nub
          float: left
          margin-top: 7px
          margin-left: 5px

          img
            width: 10px

      &.flag
        width: 36px
        margin-left: 5px
        
        img
          float: left
          width: 36px

      &.title
        color: white
        font-size: 24px
        margin-top: 4px
        margin-left: 6px
        letter-spacing: -1px


#branding 
  li
    float: left
  .subcommittee
    margin-left: 12px
    color: #fff
    font-size: 16px
    padding: 3px 6px 4px 6px
    border: 1px solid #fff
    opacity: .7
  .committee 
    img
      height: 25px





#van-header
  background-color: #ffffff
  border-bottom: 1px solid #ddd
  padding: 5px 0px 7px 0px
  position: relative
  float: left
  width: 100%

.van-header-wrapper
  width: 100%
  max-width: 1250px
  margin: 0 auto
  position: relative
  z-index: 5

ul#tabs
  float: left
  color: white
  font-size: 14px

  li
    float: left
    margin-right: 10px
    cursor: pointer
    padding: 4px 10px

ul#tabs li.my-voters.selected
  background-color: #3498DB

ul#tabs li.my-campaign.selected
  background-color: #12ae6a

ul#tabs li.my-workers.selected
  background-color: #e05f25
ul#tabs li.my-casework.selected
  background-color: #31bdb5


ul#tabs li.my-voters:hover
  background-color: #00aff3

ul#tabs li.my-campaign:hover
  background-color: #12ae6a

ul#tabs li.my-workers:hover
  background-color: #e05f25

ul#tabs li.my-casework:hover
  background-color: #31bdb5

.van-header-backdrop
  background-color: #00aff3
  opacity: .5
  position: absolute
  top: 0
  left: 0
  z-index: 1
  width: 100%
  height: 100%